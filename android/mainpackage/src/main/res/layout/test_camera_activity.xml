<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/txtScannerTitle"
		android:layout_width="138dp"
		android:layout_height="26dp"
		android:layout_marginStart="110dp"
		android:layout_marginTop="18dp"
		android:fontFamily="@font/segoe_ui_bold"
		android:text="@string/title_for_scanner"
		android:textColor="#545871"
		android:textSize="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		android:id="@+id/imgbtnScannerRecord"
		android:layout_width="122dp"
		android:layout_height="28dp"
		android:layout_marginStart="223dp"
		android:layout_marginTop="600dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/browse" />

	<ImageButton
		android:id="@+id/imgbtnScannerDevice"
		android:layout_width="122dp"
		android:layout_height="28dp"
		android:layout_marginStart="14dp"
		android:layout_marginTop="600dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/select" />

	<!--<ImageButton
		android:id="@+id/imgbtnScannerCross"
