<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="1160px"
	android:layout_height="580px">

	<TextView
		android:id="@+id/txtChangepetsChange"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="368px"
		android:layout_marginTop="113px"
		android:fontFamily="@font/segoe_ui_bold"
		android:text="@string/text_change_pets"
		android:textColor="#565656"
		android:textSize="70px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/imgChangepetPic"
		android:layout_width="240px"
		android:layout_height="240px"
		android:layout_marginStart="460px"
		android:layout_marginTop="254px"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/changepet" />
</androidx.constraintlayout.widget.ConstraintLayout>