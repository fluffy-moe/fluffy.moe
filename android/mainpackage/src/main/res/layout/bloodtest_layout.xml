<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="1160px"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/imgBloodBack"
		android:layout_width="1160px"
		android:layout_height="150px"
		android:background="@drawable/ic_imgmedicalnextbackground"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="62px"
		android:layout_marginTop="224px"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_examine_item"
		android:textColor="#807878"
		android:textSize="48px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodResult"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="453px"
		android:layout_marginTop="224px"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_result"
		android:textColor="#807878"
		android:textSize="48px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodLow"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="757px"
		android:layout_marginTop="224px"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_low"
		android:textColor="#807878"
		android:textSize="48px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodHigh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="989px"
		android:layout_marginTop="224px"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_high"
		android:textColor="#807878"
		android:textSize="48px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/lvTestItems"
		android:layout_width="1075px"
		android:layout_height="wrap_content"
		android:layout_marginStart="56px"
		android:layout_marginTop="344px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodTestName"
		android:layout_width="494px"
		android:layout_height="80px"
		android:layout_marginStart="20dp"
		android:layout_marginTop="12dp"
		android:fontFamily="@font/segoe_ui_bold"
		android:text="@string/text_hematology"
		android:textColor="#545871"
		android:textSize="60px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtBloodTestDate"
		android:layout_width="145dp"
		android:layout_height="0dp"
		android:layout_marginStart="228dp"
		android:layout_marginTop="12dp"
		android:fontFamily="@font/segoe_ui_bold"
		android:text="@string/text_date_for_bloodtest"
		android:textColor="#545871"
		android:textSize="60px"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>