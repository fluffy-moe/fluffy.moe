<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="989px"
    android:layout_height="268px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgVacCheckBackground"
        android:layout_width="80px"
        android:layout_height="80px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_medicalcheck_green" />

    <TextView
        android:id="@+id/txtDeinTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154px"
        android:layout_marginTop="0px"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="2018 / 12 / 20"
        android:textColor="#545871"
        android:textSize="57px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDeinProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154px"
        android:layout_marginTop="120px"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="Nobivac"
        android:textColor="#807878"
        android:textSize="54px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewDeinLine"
        android:layout_width="834.21px"
        android:layout_height="2px"
        android:layout_marginStart="52dp"
        android:layout_marginTop="217px"
        android:background="#E79E35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDeinProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0px"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="TextView"
        android:textColor="#807878"
        android:textSize="54px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>