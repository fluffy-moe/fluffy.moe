<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="268dp"
	android:layout_height="15dp">

	<TextView
		android:id="@+id/txtBloodItemName"
		android:layout_width="77dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:fontFamily="@font/segoe_ui_semibold"
		android:gravity="top"
		android:text="@string/text_examine_item_for_bloodtest"
		android:textAlignment="center"
		android:textSize="12dp" />

	<Space
		android:layout_width="24dp"
		android:layout_height="wrap_content"
		android:layout_weight="1" />

	<TextView
		android:id="@+id/txtBloodItemValue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:fontFamily="@font/segoe_ui_semibold"
		android:gravity="top"
		android:text="@string/text_result_for_bloodtest"
		android:textAlignment="center"
		android:textSize="12dp" />

	<Space
		android:layout_width="21dp"
		android:layout_height="wrap_content"
		android:layout_weight="1" />

	<ImageView
		android:id="@+id/viewReference"
		android:layout_width="102dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="@color/colorBloodTestBackground" />

</LinearLayout>