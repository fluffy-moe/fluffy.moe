<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ArticleActivity">

    <ImageView
        android:id="@+id/imgbackgroundBook"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/article_background" />

    <TextView
        android:id="@+id/txtArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/text_article"
        android:textColor="#565656"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imgbtnDogBook"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dog_article" />

    <ImageButton
        android:id="@+id/imgbtnCatBook"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat_article" />

    <ImageButton
        android:id="@+id/imgbtnBirdBook"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="187dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bird_article" />

    <ImageButton
        android:id="@+id/imgbtnOtherBook"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_marginStart="267dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/other_article" />

    <TextView
        android:id="@+id/txtDogBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="186dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/typeDog"
        android:textColor="#565656"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCatBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="186dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/typeCat"
        android:textColor="#565656"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBirdBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="186dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/typeBird"
        android:textColor="#565656"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOtherBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="283dp"
        android:layout_marginTop="186dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/typeOther"
        android:textColor="#565656"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDogNumBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/text_dog_number_article"
        android:textAlignment="center"
        android:textColor="#565656"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnDogBook"
        app:layout_constraintStart_toStartOf="@+id/imgbtnDogBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCatNumBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/text_cat_number_article"
        android:textAlignment="center"
        android:textColor="#565656"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnCatBook"
        app:layout_constraintStart_toStartOf="@+id/imgbtnCatBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBirdNumBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/text_bird_number_article"
        android:textAlignment="center"
        android:textColor="#565656"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnBirdBook"
        app:layout_constraintStart_toStartOf="@+id/imgbtnBirdBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOtherNumBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/text_other_number_article"
        android:textAlignment="center"
        android:textColor="#565656"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="@+id/imgbtnOtherBook"
        app:layout_constraintStart_toStartOf="@+id/imgbtnOtherBook"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTipsForKeepingBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="241dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/subtitle_for_article"
        android:textColor="#565656"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="197dp"
        android:layout_height="27dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/article_search_linearlayout"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etSearchBook"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="18dp"
            android:text="@string/searchBookEditText" />

        <ImageButton
            android:id="@+id/imgbtnSearchBook"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/article_search" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="350dp"
        android:layout_height="312dp"
        android:layout_marginTop="262dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            android:id="@+id/articlesCarousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:icvp_center_page_scale_offset="30dp"
            app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
            app:icvp_max_page_scale="0.8"
            app:icvp_medium_scaled="true"
            app:icvp_min_page_scale="0.5"
            app:icvp_min_page_scale_offset="5dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>