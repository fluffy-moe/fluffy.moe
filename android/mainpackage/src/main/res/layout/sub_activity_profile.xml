<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="588dp">

	<ImageView
		android:id="@+id/imgProfilePic"
		android:layout_width="360dp"
		android:layout_height="249dp"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		android:background="@drawable/catprofile"
		android:scaleType="fitXY"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginTop="23dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_profile"
		android:textColor="#FFFFFF"
		android:textSize="25dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		android:id="@+id/imgbtnProfileDot"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_marginStart="313dp"
		android:layout_marginTop="27dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/dot" />

	<ImageView
		android:id="@+id/imgProfileCatPhoto"
		android:layout_width="66dp"
		android:layout_height="67dp"
		android:layout_marginTop="214dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/catphoto" />

	<TextView
		android:id="@+id/txtProfileYearold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="47dp"
		android:layout_marginTop="260dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_1Y3M"
		android:textColor="#565656"
		android:textSize="17dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileKg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="261dp"
		android:layout_marginTop="260dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_4_5kg"
		android:textColor="#565656"
		android:textSize="17dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileAge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="54dp"
		android:layout_marginTop="284dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_age"
		android:textColor="#969696"
		android:textSize="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileWeight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="257dp"
		android:layout_marginTop="284dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_weight"
		android:textColor="#969696"
		android:textSize="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/imgProfileMember"
		android:layout_width="129dp"
		android:layout_height="28dp"
		android:layout_marginStart="115dp"
		android:layout_marginTop="325dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/member" />

	<TextView
		android:id="@+id/txtProfileMemberNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="329dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_medical_number"
		android:textAlignment="center"
		android:textColor="#B96320"
		android:textSize="15dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileAlbums"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="28dp"
		android:layout_marginTop="352dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_albums"
		android:textColor="#565656"
		android:textSize="17dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/txtProfileName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="287dp"
		android:fontFamily="@font/segoe_ui_semibold"
		android:text="@string/text_name_for_profile"
		android:textAlignment="center"
		android:textColor="#565656"
		android:textSize="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvAlbumList"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="384dp"
		android:layout_marginEnd="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		android:id="@+id/imgbtnProfileAddAlbum"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:layout_marginStart="304dp"
		android:layout_marginTop="352dp"
		android:background="@null"
		android:scaleType="fitXY"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/add_album" />

</androidx.constraintlayout.widget.ConstraintLayout>