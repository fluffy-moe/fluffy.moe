    <!-- 背景部分 -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="3px"
        android:right="3px">
        <shape>

            <solid android:color="#FFFFFF" />

            <stroke
                android:width="1dp"
                android:color="#A09199" />
            <corners
                android:radius="80px"
                />
        </shape>
    </item>
</layer-list>